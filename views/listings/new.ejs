<% layout("/layout/boilerplate") %>
<br></br>
<div class="row mt-3">
  <div class="col-8 offset-2">
<h3>Create a New Listing</h3>
<form method="POST" action="/listings">
  <div class="mb-3">
    <input 
      name="listing[title]" 
      placeholder="Add a catchy title" 
      type="text" 
      class="form-control" 
    />
  </div>
  <br />
  <div class="mb-3">
    <textarea
      name="listing[description]"
      placeholder="Enter description"
      class="form-control"
    ></textarea>
  </div>
  <br />
  <div class="mb-3">
    <input
      name="listing[image]"
      placeholder="Enter image URL/Link"
      type="text"
      class="form-control"
    />
  </div>
  <br />
  <div class="row">
  <div class="mb-3 col-4">
    <input
      name="listing[price]"
      placeholder="1200"
      type="number"
      class="form-control"
    />
  </div>
  <br />
  <div class="mb-3 col-8">
    <input
      name="listing[country]"
      placeholder="India"
      type="text"
      class="form-control"
    />
  </div>
</div>
  <br />
  <div class="mb-3">
    <input
      name="listing[location]"
      placeholder="Mumbai,Maharashtra"
      type="text"
      class="form-control"
    />
  </div>
  <br />
  <button type="submit" class="btn btn-dark add-btn mt-3">Add</button>
</form>
</div>
</div>
<br></br>

